<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicCalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/displayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B8B8B8"
            android:gravity="right"
            android:textColorHighlight="#C6C6C6"
            android:textColorLink="#535353"
            android:textSize="30sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/one"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="1"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/two"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="2"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/three"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="3"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/four"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="4"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/plus"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="+"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/minus"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="-"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="95dip"
                android:layout_height="match_parent"
                android:foregroundTint="#FFFFFF"
                android:gravity="center">

                <Button
                    android:id="@+id/five"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="5"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/six"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="6"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/seven"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="7"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/eight"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="8"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/multiply"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:text="*"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/divide"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="/"
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/nine"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="9"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/zero"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="0"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/dot"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="."
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/clear"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="C"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/equal"
                    android:layout_width="75dip"
                    android:layout_height="75dip"
                    android:layout_marginHorizontal="1dp"
                    android:text="="
                    android:textSize="20sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            </TableRow>

        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>